    "version": "0.2.0",
    "configurations": [
        {
            "name": "build.sh",
            "type": "shell",
            "request": "launch",
            "program": "${workspaceRoot}/build.sh",
            "args": [],
            "cwd": "${workspaceRoot}",
            "env": {
                "VSCODE_DEBUG": "true"
            }
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/play",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}